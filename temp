void limparTela()
{
    int count = 0;
    while( count != 50 )
    {
        putchar('\n');
        count++;
    }
}

int diagonalPrincipal(int matriz[][TAMANHO], int tam)
{
    int i, j, somaX = 0, somaO = 0;
    for( i = 0; i < tam; i++ )
    {
        for( j = 0; j < tam; j++)
        {
            if ( i == j )
            {
                if ( matriz[i][j] == 1 )
                    somaX++;
                if ( matriz[i][j] == -1 )
                    somaO += -1;
            }
        }
        if (somaX == 3)
            return 1;
        if (somaO == -3)
            return -1;
    }
    return 0;
}

/* depois de mostrar(tabuleiro, TAMANHO) e antes de jogadas++ */

