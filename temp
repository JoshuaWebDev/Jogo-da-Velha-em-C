// e depois de tabuleiro[linha-1][coluna-1] = vez(jogadas);
// e antes de printf("\nA posição %d,%d já foi preenchida!", linha, coluna);
    limparTela();


            if( diagonalPrincipal(tabuleiro, TAMANHO) == 1 )
            {
                printf("\nO jogador X ganhou!\n");
                break;
            }
            if( diagonalPrincipal(tabuleiro, TAMANHO) == -1 )
            {
                printf("\nO jogador O ganhou!\n");
                break;
            }